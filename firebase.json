{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "dist/webapp",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "ssr"
      },
      {
        "source": "/404",
        "function": "NotFoundApp"
      }
    ]
  },
  "functions": {
    "source": "dist",
    "predeploy": [
      "cp \"$RESOURCE_DIR/../package-server.json\" \"$RESOURCE_DIR/package.json\""
    ]
  }
}
